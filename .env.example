# Socrata API Credentials (for code enforcement data)
# Get these from: https://dev.socrata.com/
SOCRATA_API_KEY=your_api_key_here
SOCRATA_API_SECRET=your_api_secret_here
SOCRATA_APP_TOKEN=your_app_token_here

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Geographic Settings
SEARCH_RADIUS_MILES=0.25
FLORIDA_STATE_PLANE_EPSG=2881
WGS84_EPSG=4326

# Data Paths
CODE_ENFORCEMENT_CSV=data/code_enforcement_data.csv

# Database Settings (Phase 2)
# For local development with Docker Compose
DATABASE_URL=postgresql+psycopg2://wholesaler_user:wholesaler_pass@localhost:5432/wholesaler
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Airflow Settings (Phase 2)
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DAGS_FOLDER=dags
AIRFLOW_DATABASE_URL=postgresql+psycopg2://wholesaler_user:wholesaler_pass@localhost:5432/airflow

# Redis Settings (Phase 2)
REDIS_URL=redis://localhost:6379/0

# ETL Settings (Phase 2)
ETL_BATCH_SIZE=1000
ETL_ENABLE_INCREMENTAL=true
ETL_RETENTION_DAYS=365
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY_SECONDS=60

# Alert Settings (Phase 2)
ALERT_EMAIL=your_email@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_ENABLE_EMAIL=false
ALERT_ENABLE_SLACK=false
