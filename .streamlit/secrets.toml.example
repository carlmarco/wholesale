# Streamlit Cloud Secrets Template
# Copy this to your Streamlit Cloud app settings under "Secrets"
# Do NOT commit the actual secrets.toml file to git!

# API Base URL (points to your FastAPI backend)
# For local development: http://localhost:8000
# For production: your deployed API URL
API_BASE_URL = "http://localhost:8000"

# Database connection (if Streamlit needs direct DB access)
[connections.postgresql]
dialect = "postgresql"
host = "localhost"
port = 5432
database = "wholesaler"
username = "wholesaler_user"
password = "wholesaler_pass"

# Optional: Socrata API credentials (if dashboard makes direct API calls)
[socrata]
api_key = "your_api_key_here"
api_secret = "your_api_secret_here"
app_token = "your_app_token_here"

# Optional: Email configuration for alerts
[email]
smtp_host = "smtp.gmail.com"
smtp_port = 587
smtp_user = "your-email@gmail.com"
smtp_password = "your-app-password"
alert_email = "your-email@example.com"
